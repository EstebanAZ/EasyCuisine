{% extends 'base.html.twig' %}

{% block title %}Ingredient Index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/ingredient.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Ingredient Index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ingredient in ingredients %}
                <tr>
                    <td>{{ ingredient.id }}</td>
                    <td>{{ ingredient.name }}</td>
                    <td>{{ ingredient.quantity }}</td>
                    <td>
                        <div class="btn-container">
                            <a href="{{ path('app_ingredient_show', {'id': ingredient.id}) }}" class="btn btn-primary">Show</a>
                            <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-info">Edit</a>
                            <a href="{{ path('app_ingredient_delete', {'id': ingredient.id}) }}" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_ingredient_new') }}" class="btn btn-success">Create New</a>
    </div>
{% endblock %}
