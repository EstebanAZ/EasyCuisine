{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
<div class="login-container">
    <h1>Login</h1>
    <form method="post" action="{{ path('app_login') }}">
        <div class="form-group">
            {% if error %}
                <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <input type="email" name="_username" value="{{ last_username }}" placeholder="Email" required class="form-control">
            <input type="password" name="_password" placeholder="Password" required class="form-control">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn">Login</button>
        </div>
    </form>
</div>
{% endblock %}
